<h1>Actor #<%= @actor.id %> details</h1>
<a href="/actors">Go back</a>
<dl>
  <dt>Name</dt>
  <dd><%= @actor.name %></dd>
  <dt>Dob</dt>
  <dd><%= @actor.dob %></dd>
  <dt>Bio</dt>
  <dd><%= @actor.bio %></dd>
  <dt>Image</dt>
  <dd><img src="<%= @actor.image %>" alt=""></dd>
  <dt>Created at</dt>
  <dd><%= time_ago_in_words(@actor.created_at) %> ago</dd>
  <dt>Updated at</dt>
  <dd><%= time_ago_in_words(@actor.updated_at) %> ago</dd>
</dl>

<h2>Filmography</h2>
<table border="1">
  <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character name</th>
    <th></th>
  </tr>
  <% @characters.each do |character|%>
    <tr>
      <% movie = Movie.all.where(:id => character.movie_id).first %>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <td><%= Director.all.where(:id => movie.director_id).first.name %></td>
      <td><%= character.name %></td>
      <td><a href="/movies/<%= character.movie_id %>">Show details</a></td>
    </tr>
  <% end %>

</table>
