<h1>Director #<%= @director.id %> details</h1>
<a href="/directors">Go back</a>
<dl>
  <dt>Name</dt>
  <dd><%= @director.name %></dd>
  <dt>Dob</dt>
  <dd><%= @director.dob %></dd>
  <dt>Bio</dt>
  <dd><%= @director.bio %></dd>
  <dt>Image</dt>
  <dd><img src="<%= @director.image %>" alt=""></dd>
  <dt>Created at</dt>
  <dd><%= time_ago_in_words(@director.created_at) %> ago</dd>
  <dt>Updated at</dt>
  <dd><%= time_ago_in_words(@director.updated_at) %> ago</dd>
</dl>

<h2>Filmography</h2>
<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>
  <% @movies.each do |movie|%>
    <tr>
      <td><%= movie.id %></td>
      <td><img src="<%= movie.image %>" alt="img"></td>
      <td><%= movie.title %></td>
      <td><%= movie.year %></td>
      <td><%= @director.name %></td>
      <td><a href="/movies/<%= movie.id %>">Show details</a></td>
    </tr>
  <% end %>

</table>
